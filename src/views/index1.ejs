<main>
  <div class="jobs-list-container">
    <h2><%= jobs.length%> Jobs</h2>

    <div class="search-container">
      <input class="job-search" type="text" placeholder="Search here..." />
      <button class="job-search-btn">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>

    <div class="jobs">
      <% jobs.forEach((job) => {%>
      <div class="job">
        <img src="images/software-engineer.svg" alt="" />
        <h3 class="company-name"><%= job.name %></h3>
        <h4 class="job-title"><%= job.designation %></h4>
        <div class="details"><%= job.description %></div>
        <a href="#" class="details-btn">More Details</a>
        <span class="open-positions"
          ><%=job.openings %> open positions left</span
        >
      </div>
      <% }) %>
    </div>
  </div>
</main>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Category</th>
      <th scope="col">Designation</th>
      <th scope="col">Description</th>
      <th scope="col">Location</th>
      <th scope="col">name</th>
      <th scope="col">Salary</th>
      <th scope="col">Openings</th>
      <th scope="col">Applicants</th>
      <th scope="col">Skills</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach((job) => { %>
    <tr>
      <th><%= job.id %></th>
      <td><%= job.category %></td>
      <td><%= job.designation %></td>
      <td><%= job.description %></td>
      <td><%= job.location %></td>

      <td><%= job.name %></td>
      <td><%= job.salary %></td>
      <td><%= job.openings %></td>
      <td><a href=""><%= job.applicants %></a></td>

      <td><%= job.skills %></td>
